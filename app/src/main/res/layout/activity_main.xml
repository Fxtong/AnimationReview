<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.permanentlove.animationreview.MainActivity">

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_viewAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViewAnimation"
        android:textAllCaps="false"
        android:background="#af9bf0"
        />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_drawableAnimation"
        android:layout_below="@+id/btn_viewAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DrawableAnimation"
        android:textAllCaps="false"
        android:background="#9edcf6"
        />
    <Button
        android:id="@+id/btn_propertyAnimation"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_drawableAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PropertyAnimation"
        android:textAllCaps="false"
        android:background="#ef9e7b"
        />

</RelativeLayout>
